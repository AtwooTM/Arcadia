<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:vm="clr-namespace:SampleApp.ViewModel;assembly=SampleApp.ViewModel"
                    xmlns:vw="clr-namespace:SampleApp.View;assembly=SampleApp.View">

    <!-- custom styles -->

    <Style x:Key="DescriptionHeaderStyle" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!--Right Aligned Number -->
    <Style x:Key="RightAlignStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="TextAlignment" Value="Right" />
        <Setter Property="Padding" Value="5,0"/>
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- MainWindow ViewModel -->
    <vm:MainWindowViewModel x:Key="MainWindowViewModel" />

    <!-- view/view model bindings -->

    <DataTemplate DataType="{x:Type vm:GraphViewModel}">
        <vw:GraphView/>
    </DataTemplate>

    <!-- Design-Mode Data -->
    <vm:GraphViewModel x:Key="GraphViewModelDesign" />

</ResourceDictionary>